<h3>To give the recipe (appointment)</h3>
<%= form_for [ @visit, @appointment ] do |f| %>
  <p>
    <%= f.label :author_name %><br/>
    <%= f.text_field :author_name %>
  </p>
  <p>
    <%= f.label :recipe %><br/>
    <%= f.text_area :recipe %>
  </p>
  <p>
    <%= f.submit 'Submit' %>
  </p>
<% end %>
