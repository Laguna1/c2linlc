<p id="notice"><%= notice %></p>

<h1>Visits</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Time</th>
      <th>Problem</th>
      <th>Visit_id</th>
      <th>Appointment_id</th>
      <th>Receipt</th>
      <th>Closing date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @visits.each do |visit| %>
      <tr>
        <td><%= visit.date %></td>
        <td><%= visit.time %></td>
        <td><%= visit.problem %></td>
        <td><%= visit.id %></td>
    <%= if visit.appointment.count != nil %>
        <td><%= visit.appointment.id %></td>
        <td><%= visit.appointment.receipt %></td>
        <td><%= visit.appointment.closing_date %></td>
    <% end %>
        <td><%= link_to 'Show', visit %></td>
        <td><%= link_to 'Edit', edit_visit_path(visit) %></td>
        <td><%= link_to 'Destroy', visit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

