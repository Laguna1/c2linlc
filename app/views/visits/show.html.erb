<p id="notice"><%= notice %></p>

<p>
  <strong>Patient:</strong>
  <%= @visit.creator.fullname %>
</p>

<p>
  <strong>Date:</strong>
  <%= @visit.date %>
</p>

<p>
  <strong>Time:</strong>
  <%= @visit.time %>
</p>

<p>
  <strong>Problem:</strong>
  <%= @visit.problem %>
</p>

<%= link_to 'Edit', edit_visit_path(@visit) %> |
<%= link_to 'Back', visits_path %>

<p>
  <strong>Doctor:</strong>
  <%= @visit.doc.fullname %>
</p>
<% if @visit.appointments.exists? %>
  <p><%= render partial: 'visits/appointment', collection: @visit.appointments %></p>
<% else %>
  <p><%= render partial: 'appointments/form' %></p>
<% end %>